<?xml version="1.0" encoding="utf-8"?>
<com.qtd.realestate1012.custom.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rippleView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:rv_color="@color/colorGrayBorder"
    app:rv_rippleDuration="250">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvArea"
                style="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvDescription"
                style="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imvHeart"
            style="?attr/selectableItemBackgroundBorderless"
            android:layout_width="@dimen/defaultSize"
            android:layout_height="@dimen/defaultSize"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/layout"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_heart_pink_large" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorGrayBorder" />
    </RelativeLayout>
</com.qtd.realestate1012.custom.RippleView>